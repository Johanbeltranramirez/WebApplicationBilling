@model WebApplicationBilling.Models.DTO.ProductoDTO

@{
    ViewData["Title"] = "Create Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4">

    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">Crear un producto</h2>
        </div>
    </div>
    <br />
    <br />

    <div class="row">
        <form method="post" asp-action="Create" enctype="multipart/form-data">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="nombreProducto"></label>
                </div>
                <div class="col-8">
                    <input asp-for="nombreProducto" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="proveedorId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="proveedorId" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="unitPrecio"></label>
                </div>
                <div class="col-8">
                    <input asp-for="unitPrecio" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="paquete"></label>
                </div>
                <div class="col-8">
                    <input asp-for="paquete" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="esDescontinuado"></label>
                </div>
                <div class="col-8">
                    <input asp-for="esDescontinuado" class="form-control" />
                </div>
            </div>

            <br />
            <br />
            <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Crear Producto</button>
                </div>
                <div class="col">
                    <a asp-action="Index">Volver</a>
                </div>
            </div>
        </form>
    </div>

</div>
